---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

let currentDate = new Date();
let currentYear = currentDate.getFullYear();
---

	<footer id="form" >
		{
		
						<ul>
						    <li>
								<a href={`/${lang}/form/`}>
         		 					{t('footer.form')}
       							</a>
							</li>
								<li>
									<a href={`/${lang}/contact/`}>
          								{t('footer.contact')}
       								</a>
								</li>


								<li>
									<a href={`/${lang}/location/`}>
          								{t('footer.location')}
       								</a>
								</li>
	                            <li>
									<a href={`/${lang}/`}>
          								{t('footer.home')}
       								</a>
								</li>
					
						</ul>


						<ul class="menu flex-row">
					<li>
						<select
							id="language-select"
							style="border: none; text-align: center; color: #8C8C8C"
							onchange="handleLanguageChange(this)"
						>
							<option value="" disabled selected>Choose language</option>
							<option value="/en/">English</option>
							<option value="/ro/">Romanian</option>
						</select>
					</li>
					</ul>

						<p>&#169;{currentYear}. All rights reserved.</p>
			
			
		}
	</footer>
	<script is:inline>
function handleLanguageChange(selectElement) {
        setTimeout(() => {
            location = selectElement.value;
        }, 500);
    }
	</script>
<style>
	footer {
		background-color: #4c4c4b;
        color: white;
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 2rem;
		width: 100%;
		min-height: 15rem;
	}
	footer ul {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: center;
		list-style: none;
		gap: 1.5rem;
		padding: 0;
		margin: 0;
	}

	footer ul li {
		display: flex;
	}

	footer p {
		font-size: 1rem;
		line-height: 1.1875rem;
		margin-top: 1.5625rem;
		text-align: center;
		font-weight: 500;
		color: white;
	}
	footer a {
		color: white;
		text-decoration: none;
		font-weight: 400;
		font-size: 0.875rem;
		line-height: 1.0625rem;
		display: inline-block;
	}

	@media (max-width: 48rem) {
		footer {
			padding: 4.375rem 1.875rem;
			justify-content: flex-start;
		}

		footer ul {
			padding: 1rem;
			flex-direction: column;
			gap: 1rem;
			justify-content: flex-start;
			text-align: left;
		}
		footer p {
			padding: 1rem;
			text-align: left;
		}
	}
</style>